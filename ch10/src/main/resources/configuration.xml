<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
 PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<typeAliases>
		<!-- 원래 type명으로 써줘야하지만 별칭을 member로 설정하고 member로 사용하면 된다 -->
		<typeAlias alias="board" type="com.ch.ch10.model.Board"/>
		<typeAlias alias="rbd" type="com.ch.ch10.model.ReplyBoard"/>
	</typeAliases>
	<!-- ③ 매퍼정보 설정 -->
	<mappers>
		<mapper resource="board.xml" />
		<mapper resource="rbd.xml" />
	</mappers>
</configuration>