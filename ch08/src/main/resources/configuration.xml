<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
 PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<typeAliases>
		<!-- 원래 type명으로 써줘야하지만 별칭을 member로 설정하고 member로 사용하면 된다 -->
		<typeAlias alias="dept" type="com.ch.ch08.model.Dept"/>
		<typeAlias alias="emp" type="com.ch.ch08.model.Emp"/>
	</typeAliases>
	<!-- ③ 매퍼정보 설정 -->
	<mappers>
		<mapper resource="dept.xml" />
		<mapper resource="emp.xml" />
	</mappers>
</configuration>